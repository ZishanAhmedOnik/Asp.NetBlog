<div>
    <div class="card">
        <div class="card-header">
            Full Post
        </div>
        <div class="card-body">
            <h5 class="card-title">{{ article.title }}</h5>
            <p class="card-text">{{ article.body }}</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            Comments
        </div>

        <div class="card-body">
            <div class="card" ng-repeat="comment in article.Comments">
                <div class="card-header">
                    {{ comment.username }}
                </div>

                <div class="card-body">
                    <p>{{ comment.comment }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            Add Comment
        </div>

        <div class="card-body">
            <div class="form-group">
                <label for="username">Name</label>
                <input type="text" class="form-control" id="username" ng-model="Comment.username" />
            </div>

            <div class="form-group">
                <label for="comment">Comment</label>
                <textarea class="form-control" id="comment" ng-model="Comment.comment"></textarea>
            </div>

            <button class="btn btn-success" ng-click="addComment();">SAVE</button>
        </div>
    </div>
</div>